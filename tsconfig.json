{
	"exclude": ["out", "node_modules", ".vscode-test", "test/fixture"],
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "out",    
    "sourceMap": true,
    "rootDir": ".",
    "resolveJsonModule": true,
    "declaration": false,
    "esModuleInterop": true,
    "inlineSources": true,
    "useUnknownInCatchVariables": false
  }
}
