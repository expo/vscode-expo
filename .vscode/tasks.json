// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch",
      "type": "npm",
      "script": "start",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      }
    },
    {
      "label": "clean",
      "type": "npm",
      "script": "clean",
      "problemMatcher": "$tsc",
      "presentation": {
        "reveal": "never"
      }
    },
    {
      "label": "install-fixtures",
      "type": "shell",
      "command": "yarn install --frozen-lockfile --cwd ${workspaceFolder}/test/fixture",
      "presentation": {
        "reveal": "never"
      }
    },
    {
      "label": "build-development",
      "type": "npm",
      "script": "build",
      "problemMatcher": "$tsc",
      "presentation": {
        "reveal": "never"
      },
      "group": "build"
    },
    {
      "label": "build-production",
      "type": "npm",
      "script": "build:production",
      "problemMatcher": "$tsc",
      "presentation": {
        "reveal": "never"
      },
      "group": "build"
    },
    {
      "label": "build-extension",
      "type": "shell",
      "command": "yarn vsce package",
      "group": "build"
    },
    {
      "label": "launch-start-development",
      "dependsOn": ["clean", "build-development", "watch"]
    },
    {
      "label": "launch-start-production",
      "dependsOn": ["clean", "build-production"]
    },
    {
      "label": "launch-test-development",
      "dependsOn": ["clean", "install-fixtures", "build-development"]
    },
    {
      "label": "launch-test-production",
      "dependsOn": ["clean", "install-fixtures", "build-development", "build-production"]
    }
  ]
}
