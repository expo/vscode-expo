// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch for development",
      "type": "npm",
      "script": "start",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build for test",
      "dependsOn": ["clean project", "install fixture"],
      "type": "npm",
      "script": "build",
      "problemMatcher": "$tsc",
      "presentation": {
        "reveal": "never"
      },
      "group": "build"
    },
    {
      "label": "clean project",
      "type": "npm",
      "script": "clean",
      "group": "build",
      "presentation": {
        "reveal": "never"
      },
    },
    {
      "label": "build for production",
      "type": "npm",
      "script": "build:production",
      "group": "build"
    },
    {
      "label": "install fixture",
      "type": "shell",
      "command": "yarn install --frozen-lockfile --cwd ${workspaceFolder}/test/fixture/expo-45",
      "presentation": {
        "reveal": "never"
      }
    }
  ]
}
